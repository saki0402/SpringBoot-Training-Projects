#key=value

# Tomcat server settings
server.port = 8082

# DataSource connection settings
spring.datasource.url=jdbc:h2:mem:emp-proj-db
spring.datasource.username=db-user
spring.datasource.password=db-password

# H2 settings
spring.h2.console.enabled=true
spring.h2.console.path=/h2-console

# Hibernate settings
# Dialect - program that helps hibernate to map data types from Java to underlying DB
# Java String mapped to Varchar
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect
spring.jpa.properties.hibernate.show_sql=true
spring.jpa.properties.hibernate.format_sql=true
# ask hibernate to generate the table in uderlying database
spring.jpa.hibernate.ddl-auto=create


